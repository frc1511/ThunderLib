{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": // Uncomment one of the lines below to select which test to debug (core or driver, gradle or cmake)
                "${workspaceFolder}/build/install/thunderLibCoreTest/linuxarm64/debug/lib/ThunderLibCoreTest",
                // "${workspaceFolder}/build/install/thunderLibDriverTest/linuxarm64/debug/lib/ThunderLibDriverTest",
                // "${workspaceFolder}/build/install/thunderLibTest/linuxarm64/debug/lib/ThunderLibTest",
                // "${workspaceFolder}/build_cmake/ThunderLibCoreTests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}